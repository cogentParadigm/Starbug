{% if attributes is not empty %}
  {% set attributes = {} %}
{% endif %}
{% set attributes = attributes|merge({"data-dojo-type":"storm/menu"}) %}
{% set links = helper("collections").get("Menu").query({"menu": menu}) %}
<ul {{ helper("filter").attributes(attributes)|raw }}>
  {% for link in links %}
    {{ include("menu-link.html.twig", {"link": link}) }}
  {% endfor %}
</ul>
