{% extends "panel.html.twig" %}

{% block before %}
{% if helper("db").success("menus", "create") %}
  <div class="success">Menu saved successfully</div>
{% endif %}
{% endblock %}
{% block title %}Update Menu {{ menu }}{% endblock %}
{% block body %}
  <div class="clearfix">
    <p class="pull-right">
      <a class="btn btn-default" href="{{ helper("url").build("admin/menus/create?menu=" ~ menu) }}">
        Add Menu Item <b class="fa fa-plus"></b>
      </a>
    </p>
  </div>
  {{ helper("displays").render("MenusTreeGrid", {"menu": menu}) }}
{% endblock %}
