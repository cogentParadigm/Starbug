{% if helper("db").success("users", "forgotPassword") %}
  <p>An email has been sent to you with instructions for resetting your password.<br />Click <a href="{{ helper("url").build("login") }}">here</a> to return to the login page.</p>
{% else %}
  <h2>Forgot Password</h2>
  <P>Unable to login or forgot your password?<br />Enter your email address below and we'll send you a link to reset your password.</p>
  {{ helper("displays").render("ForgotPasswordForm") }}
{% endif %}
