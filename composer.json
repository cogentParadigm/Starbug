{
	"config": {
		"platform": {
			"php": "7.1"
		}
	},
	"require": {
		"php-di/php-di": "^5.1",
		"phpmailer/phpmailer": "dev-master",
		"masterexploder/phpthumb": "dev-master",
		"ezyang/htmlpurifier":"dev-master",
		"psr/log": "^1.0",
		"monolog/monolog": "^1.17",
		"php-console/php-console": "^3.1",
		"wp-cli/php-cli-tools": "^0.10.5",
		"doctrine/dbal": "^2.8",
		"league/flysystem": "^1.0",
		"twig/twig": "~2.0",
		"litipk/flysystem-fallback-adapter": "^0.1.2",
		"twistor/flysystem-http": "^0.2.0"
	},
	"require-dev": {
		"sebastian/phpcpd": "*",
		"phploc/phploc": "*",
		"phpmd/phpmd":"*",
		"squizlabs/php_codesniffer": "3.*",
		"phpspec/phpspec": "^4.3",
		"phpunit/phpunit": "^7",
		"phpunit/dbunit": "^4.0",
		"leanphp/phpspec-code-coverage": "^4.2"
	},
	"autoload": {
		"classmap":["core", "app", "modules", "var"]
	},
	"scripts": {
		"pre-install-cmd": "mkdir -p var",
		"post-install-cmd": "php sb generate host",
		"migrate": [
			"php sb migrate",
			"@composer dump-autoload"
		]
	}
}
