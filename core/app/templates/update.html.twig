{% extends "panel." ~ request.getFormat()|default("html") ~ ".twig" %}

{% if form_header is empty and model is not empty %}
  {% set form_header = "Update " ~ helper("models").get(model).singular_label %}
{% endif %}
{% block title %}{{ form_header }}{% endblock %}
{% block body %}
    {{ helper("displays").render(form ?? ((model|title) ~ "Form"), request.getParameters()|merge({"operation": action ?? "create", "id": id})) }}
{% endblock %}
