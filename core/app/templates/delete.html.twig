{% extends "panel." ~ route.getOption("format")|default("html") ~ ".twig" %}

{% if form_header is empty and model is not empty %}
  {% set form_header = "Delete " ~ helper("models").get(model).singular_label %}
{% endif %}
{% block title %}{{ form_header }}{% endblock %}
{% block body %}
    {{ helper("displays").render(form ?? "DeleteForm", {"id": id, "model": model}) }}
{% endblock %}
